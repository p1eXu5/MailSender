<UserControl x:Class="ListViewItemSchedulerControl.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ListViewItemSchedulerControl"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <StackPanel Orientation="Horizontal">
        <Button x:Name="m_bnEdit" >
            <Button.Content>
                <StackPanel Orientation="Horizontal">
                    <Image Source="Images\Pencil-2-icon.png" Height="16" />
                    <TextBox x:Name="m_tbxTitle" Margin="5,0" TextWrapping="Wrap"/>
                </StackPanel>
            </Button.Content>
        </Button>            
    </StackPanel>
</UserControl>
