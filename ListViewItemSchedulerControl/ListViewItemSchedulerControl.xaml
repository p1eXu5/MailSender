<UserControl x:Class="ListViewItemSchedulerControl.ListViewItemSchedule"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ListViewItemSchedulerControl"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="180">
    <DockPanel Height="20">
        <Button x:Name="m_bnEdit" Padding="1" DockPanel.Dock="Left">
            <Button.Content>
                <Image Source="Images\Pencil-2-icon.png" Height="16" Width="16"/>
            </Button.Content>
        </Button>
        <Button x:Name="m_bnDelete" DockPanel.Dock="Right">
            <Button.Content>
                <Image Source="Images\Close-icon.png" Height="16" Width="16" /> 
            </Button.Content>
        </Button>
        <TextBox x:Name="m_tbxTitle" Margin="5,0" TextWrapping="Wrap" MinWidth="100" 
                 HorizontalAlignment="Stretch" 
                 VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
                 FontSize="11" Text="Дата"/>
    </DockPanel>
</UserControl>
