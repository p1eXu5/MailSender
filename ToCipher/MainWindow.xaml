<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel x:Name="m_spPanel" Margin="10, 50, 10, 50" VerticalAlignment="Top">
        <Label>Пороль:</Label>
        <TextBox x:Name="m_tbPassword" HorizontalAlignment="Stretch" KeyUp="m_tbPassword_KeyUp"/>
        <Label Margin="0, 10, 0, 0">Шифр:</Label>
        <TextBox x:Name="m_tbCipher" HorizontalAlignment="Stretch" IsReadOnly="True"/>
    </StackPanel>
</Window>
